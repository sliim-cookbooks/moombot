[Unit]
Description=<%= node['moombot']['name'].capitalize %> Daemon

[Service]
User=<%= node['moombot']['name'] %>
PIDFile=<%= node['moombot']['home'] %>/<%= node['moombot']['name'] %>.pid
ExecStart=/usr/bin/env ruby <%= node['moombot']['home'] %>/daemon start
ExecStop=/usr/bin/env ruby <%= node['moombot']['home'] %>/daemon stop

[Install]
WantedBy=multi-user.target
